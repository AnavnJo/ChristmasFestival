name: Run Discord Bot

on:
  push:
    branches:
      - main  # Questo si attiva ogni volta che fai un push sul ramo "main".

jobs:
  build:
    runs-on: ubuntu-latest  # Usa un sistema Ubuntu per eseguire il bot

    steps:
      - name: Checkout code
        uses: actions/checkout@v2  # Passo per fare il checkout del codice del tuo repository

      - name: Set up Python
        uses: actions/setup-python@v2  # Imposta la versione di Python
        with:
          python-version: '3.8'  # Usa Python 3.8, ma puoi cambiarlo se necessario

      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install -r requirements.txt  # Installa tutte le dipendenze da requirements.txt

      - name: Run the bot
        env:
          DISCORD_TOKEN: ${{ secrets.DISCORD_TOKEN }}  # Usa il token segreto del tuo bot
        run: python bot.py  # Esegui il bot (assicurati che sia nel file giusto)
